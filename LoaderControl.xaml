<Window x:Class="IMS.LoaderControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True"
        Width="600"
        Height="450">

  <!-- Only center white box visible -->
  <Grid Background="Transparent">

    <Border Background="White"
                CornerRadius="4"
                Padding="10"
                BorderBrush="#FFAAAAAA"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

      <Grid Width="350">

        <Image Source="/Images/ImageWait.jpg"
                       Width="350"
                       Height="150"
                       Stretch="Uniform"/>

        <Image Source="/Images/ImageiDocs.jpg"
                       Width="50"
                       Height="50"
                       Stretch="Uniform"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="10"/>

      </Grid>

    </Border>

  </Grid>
</Window>
