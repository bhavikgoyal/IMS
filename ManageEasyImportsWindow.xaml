<Window x:Class="IMS.ManageEasyImportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasyImport Folders"
        Height="466" Width="260"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="LightGray"
        Loaded="Window_Loaded">

  <Border BorderBrush="LightGray" BorderThickness="9" Background="White">
    <Grid Margin="2">

      <Grid.RowDefinitions>
        <RowDefinition Height="120"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="150"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <Border BorderBrush="#A0A0A0" BorderThickness="0" Padding="0">
        <ListBox x:Name="lbAdded"/>
      </Border>

      <StackPanel Grid.Row="1" Margin="0,6,0,6">
        <ComboBox x:Name="cbDrives" Width="222"/>
      </StackPanel>

      <Border Grid.Row="2" BorderBrush="#C0C0C0" BorderThickness="0">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <TreeView x:Name="tvFolders"/>
        </ScrollViewer>
      </Border>

      <TextBox x:Name="txtSelected"
                     Grid.Row="3"
                     Height="24"
                     Margin="0,6,0,6"
                     VerticalContentAlignment="Center"
      />

      <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="center">
        <Button x:Name="btnAdd"
                        Content="Add Folder"
                        Width="100"
                        Height="30"
                        Margin="0,0,1,0"
                        Click="btnAdd_Click"
        />

        <Button x:Name="btnRemove"
                        Content="Remove Folder"
                        Width="121"
                        Click="btnRemove_Click"
        />
      </StackPanel>

      <Button x:Name="btnClose"
                    Content="Close"
                    Grid.Row="5"
                    Width="222"
                    Height="30"
                    HorizontalAlignment="Center"
                    Margin="0,4,0,0"
                    Click="btnClose_Click"
      />

    </Grid>
  </Border>
</Window>

