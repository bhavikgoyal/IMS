                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <Grid Grid.Column="0"></Grid>
              <Grid Grid.Column="1" Margin="0,10,0,0">
                <Button Style="{StaticResource ActionButtonStyleGrp}"  Background="#4CAF50" Padding="8">
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,5,10,5">
                    <Image Source="/Images/apply.png" Margin="0,0,0,0"/>
                    <TextBlock Text="APPLY" VerticalAlignment="Center" FontSize="14" Foreground="White"/>
                  </StackPanel>
                </Button>
              </Grid>
              <Grid Grid.Column="2"></Grid>
            </Grid>
          </Grid>
          <Grid Grid.Row="3" Margin="0,-10,0,10" >
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <Grid Grid.Column="0">
                <Grid>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                  </Grid.RowDefinitions>
                  <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,5">
                    <Image Source="/Images/usersarrow.png" Margin="0,0,10,0" Width="45" Height="45"/>
                    <TextBlock Text="All Users" VerticalAlignment="Center" FontSize="18" Foreground="#333" FontWeight="SemiBold"/>
