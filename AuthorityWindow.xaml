                      <StackPanel>
                        <ListBox 
                                x:Name="WFGroupsAllUsersListBox" 
                                SelectionMode="Multiple"
                                Style="{DynamicResource ModernListBoxStyle}"
                                ItemContainerStyle="{DynamicResource ModernListBoxItemStyle}">
                        </ListBox>
                      </StackPanel>
                    </ScrollViewer>
                  </Border>
                </Grid>
              </Grid>
              <Grid Grid.Column="1" Margin="20,0,20,0">
