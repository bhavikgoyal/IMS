                <ComboBoxItem Content="Admin (ID=1)"/>
                <ComboBoxItem Content="Full (ID=2)"/>
                <ComboBoxItem Content="read only (ID=3)"/>
                <ComboBoxItem Content="Trinee (ID=4)"/>
                <ComboBoxItem Content="Memo"/>
              </ComboBox>
