                            <Border Margin="0,5,0,5">
                              <Image Source="/Images/doublearrow.png" Margin="0,1,0,0" Width="30"/>
                            </Border>
                          </StackPanel>
                        </Button>
                        <Button Grid.Row="2" Style="{StaticResource ActionButtonStyleGrp}" Background="#007ACC" Click="MoveToAllUsers">
                          <StackPanel HorizontalAlignment="Stretch" Width="65" Margin="0,2,0,2" VerticalAlignment="Center" Background="#fff">
                            <Border Margin="0,5,0,5">
                              <Image Source="/Images/leftnext.png" Margin="0,1,0,0" Width="30"/>
                            </Border>
                          </StackPanel>
                        </Button>
                        <Button Grid.Row="3" Style="{StaticResource ActionButtonStyleGrp}" Background="#007ACC" Click="MoveAllToAllUsers">
                          <StackPanel HorizontalAlignment="Stretch" Width="65" Margin="0,2,0,2" VerticalAlignment="Center" Background="#fff">
                            <Border Margin="0,5,0,5">
                              <Image Source="/Images/doublearrowleft.png" Margin="0,1,0,0" Width="30"/>
                            </Border>
                          </StackPanel>
                        </Button>
                      </Grid>

                      <Grid Grid.Row="2"></Grid>
                    </Grid>
                  </Grid>
                </Grid>
              </Grid>
              <Grid Grid.Column="2">
                <Grid>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                  </Grid.RowDefinitions>
                  <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,5">
                    <Image Source="/Images/addusersarrow.png" Margin="0,0,10,0" Width="45" Height="45"/>
                    <TextBlock Text="Added Users" VerticalAlignment="Center" FontSize="18" FontWeight="SemiBold" Foreground="#333"/>
                  </StackPanel>
                  <Border Grid.Row="1" Padding="10" BorderThickness="0" BorderBrush="#000" Background="#fff" Margin="0,10,10,0" Effect="{StaticResource MaterialDesignShadowDepth1}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                      <StackPanel>
                        <ListBox x:Name="ScrollWFGAllUsersListBox" SelectionMode="Multiple" Style="{DynamicResource ModernListBoxStyle}"
                            ItemContainerStyle="{DynamicResource ModernListBoxItemStyle}">
                        </ListBox>
                      </StackPanel>
                    </ScrollViewer>
                  </Border>
                </Grid>
              </Grid>
            </Grid>
          </Grid>
        </Grid>
      </Grid>
    </Grid>
  </Border>
</Window>
