                  <Image Source="/Images/team.png" Margin="0,0,10,0"/>
                  <TextBlock Text="LOAD / CREATE GROUP" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
              </Button>
            </Border>
            <Border Grid.Column="2" BorderThickness="0" BorderBrush="#000" Margin="10,10,10,0" Effect="{StaticResource MaterialDesignShadowDepth1}">
              <Button Style="{StaticResource ActionButtonStyleGrp}" Background="#F44336" Padding="8">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                  <Image Source="/Images/team.png" Margin="0,0,10,0"/>
                  <TextBlock Text="DELETE GROUP" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
              </Button>
            </Border>
