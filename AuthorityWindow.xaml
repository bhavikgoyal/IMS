                      <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                          <RowDefinition Height="*" />
                          <RowDefinition Height="*" />
                          <RowDefinition Height="*" />
                          <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0" Style="{StaticResource ActionButtonStyleGrp}" Background="#007ACC" Click="MoveToAddedUsers">
                          <StackPanel HorizontalAlignment="Stretch" Width="65" Margin="0,2,0,2" VerticalAlignment="Center" Background="#fff">
                            <Border Margin="0,5,0,5">
                              <Image Source="/Images/rightnext.png" Margin="0,1,0,0" Width="30"/>
                            </Border>
                          </StackPanel>
                        </Button>
                        <Button Grid.Row="1" Style="{StaticResource ActionButtonStyleGrp}" Background="#007ACC" Click="MoveAllToAddedUsers"> 
