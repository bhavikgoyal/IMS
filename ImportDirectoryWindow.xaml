<Window x:Class="IMS.ImportDirectoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMS"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ImportDirectoryWindow" Height="320" Width="290">
  <Grid Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <!-- checkbox -->
      <RowDefinition Height="Auto"/>
      <!-- buttons -->
    </Grid.RowDefinitions>

    <!-- Drive combo -->
    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,6">
      <TextBlock Text="Drive:"
                       VerticalAlignment="Center"
                       Margin="0,0,6,0"/>
      <ComboBox x:Name="DriveCombo"
                      Width="200"
                      SelectionChanged="DriveCombo_SelectionChanged"/>
    </StackPanel>

    <!-- Folder tree -->
    <Border Grid.Row="1"
                BorderBrush="#CCCCCC"
                BorderThickness="1">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <TreeView x:Name="FolderTree"
                          SelectedItemChanged="FolderTree_SelectedItemChanged"/>
      </ScrollViewer>
    </Border>

    <!-- Include sub dirs -->
    <CheckBox x:Name="IncludeSubDirsCheckBox"
                  Grid.Row="2"
                  Margin="0,6,0,6"
                  Content="Include Sub Directories"
                  IsChecked="True"/>

    <!-- Buttons -->
    <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
      <Button Content="Start Import"
                    Width="100"
                    Margin="0,0,6,0"
                    Click="StartImport_Click"/>
      <Button Content="Cancel Import"
                    Width="100"
                    Click="Cancel_Click"/>
    </StackPanel>
  </Grid>
</Window>
