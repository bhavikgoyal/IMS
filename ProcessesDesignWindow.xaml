    <!-- Style for the minimalist ScrollBar component -->
    <Style x:Key="MinimalistScrollBarStyle" TargetType="{x:Type ScrollBar}">
      <!-- Set a fixed width for vertical scrollbars (very thin) 
            -->
      <Setter Property="Width" Value="8" />
      <!-- Adjust this value for desired thinness -->
      <Setter Property="Height" Value="Auto" />
      <!-- For horizontal scrollbar if you use it -->
      <Setter Property="Background" Value="Transparent" />
      <!-- Make the track background transparent -->
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Margin" Value="0" />
      <Setter Property="Padding" Value="0" />

      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type ScrollBar}">
            <Grid x:Name="Bg">
              <Border Background="{TemplateBinding Background}" />

              <Track x:Name="PART_Track" IsDirectionReversed="True" Margin="0,5,0,5">
                <!-- Add vertical margin for the track to create space for thumb -->
                <Track.DecreaseRepeatButton>
                  <!-- Completely hide the decrease button -->
                  <RepeatButton Command="{x:Static ScrollBar.PageUpCommand}" Style="{x:Null}" Opacity="0"
                                Focusable="False" />
                </Track.DecreaseRepeatButton>
                <Track.Thumb>
                  <!-- Style for the rounded, pill-shaped thumb -->
                  <Thumb Background="#808080" BorderBrush="#808080" BorderThickness="0" Width="5"
                                Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=TemplatedParent}}">
                    <Thumb.Template>
                      <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            SnapsToDevicePixels="True" />
                      </ControlTemplate>
                    </Thumb.Template>
                  </Thumb>
                </Track.Thumb>
                <Track.IncreaseRepeatButton>
                  <!-- Completely hide the increase button -->
                  <RepeatButton Command="{x:Static ScrollBar.PageDownCommand}" Style="{x:Null}" Opacity="0"
                                Focusable="False" />
                </Track.IncreaseRepeatButton>
              </Track>
            </Grid>
            <ControlTemplate.Triggers>
              <!-- Horizontal scrollbar adjustments (if needed) -->
              <Trigger Property="Orientation" Value="Horizontal">
                <Setter TargetName="PART_Track" Property="IsDirectionReversed" Value="False" />
                <Setter TargetName="PART_Track" Property="Margin" Value="5,0,5,0" />
                <!-- Horizontal margin for track -->
                <Setter Property="Width" Value="Auto" />
                <Setter Property="Height" Value="8" />
                <Setter TargetName="PART_Track" Property="LayoutTransform">
                  <Setter.Value>
                    <RotateTransform Angle="0" />
                  </Setter.Value>
                </Setter>
                <Setter TargetName="PART_Track" Property="RenderTransform">
                  <Setter.Value>
                    <TranslateTransform
                                        Y="{Binding RelativeSource={RelativeSource Mode=Self}, Path=ActualHeight, Converter={StaticResource HalfHeightConverter}}" />
                  </Setter.Value>
                </Setter>
              </Trigger>
              <!-- Make the thumb more prominent on mouse over -->
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="PART_Track" Property="Opacity" Value="1" />
              </Trigger>
              <Trigger Property="IsMouseOver" Value="False">
                <Setter TargetName="PART_Track" Property="Opacity" Value="0.7" />
                <!-- Slightly faded when not hovered -->
