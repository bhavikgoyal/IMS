<Window x:Class="IMS.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMS"
        mc:Ignorable="d"  ResizeMode="NoResize"
        Height="350" Width="750"  WindowStyle="None">

  <Window.Resources>
    <!-- Custom Title Bar Buttons Style -->
    <Style x:Key="TitleBarButtonStyle" TargetType="{x:Type Button}">
      <Setter Property="Width" Value="35"/>
      <Setter Property="Height" Value="30"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type Button}">
            <Border Background="{TemplateBinding Background}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF505050"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#FF707070"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </Window.Resources>
  <Border BorderBrush="Gray" BorderThickness="1">
    <Grid Margin="0,39,0,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="147*"/>
        <ColumnDefinition Width="227*"/>
      </Grid.ColumnDefinitions>

      <!-- Main Content -->
      <Grid Grid.ColumnSpan="2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="54*"/>
          <ColumnDefinition Width="18*"/>
          <ColumnDefinition Width="22*"/>
          <ColumnDefinition Width="15*"/>
          <ColumnDefinition Width="70*"/>
          <ColumnDefinition Width="90*"/>
          <ColumnDefinition Width="35*"/>
          <ColumnDefinition Width="15*"/>
          <ColumnDefinition Width="305*"/>
          <ColumnDefinition Width="124*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="35*"/>
          <RowDefinition Height="5*"/>
          <RowDefinition Height="63*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#FFF5EE"
               MouseLeftButtonDown="Window_MouseLeftButtonDown" Grid.ColumnSpan="10" Margin="0,-37,0,114">
          <Grid Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
              <TextBlock Text="WelCome Admin"
                              Foreground="Black" FontSize="15" FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
              <Button Content="&#xE8BB;" Foreground="Black" Style="{StaticResource TitleBarButtonStyle}" Click="CloseButton_Click"  FontFamily="Segoe MDL2 Assets"/>
            </StackPanel>
          </Grid>
        </Border>
        <!-- Menu -->
        <Menu  Background="White" VerticalAlignment="Top" Height="25" Grid.ColumnSpan="10" Margin="0,-9,0,0">
          <MenuItem Header="Windows Authentication" />
          <MenuItem Header="System Authentication" />
        </Menu>
        <Rectangle Height="1" Fill="#CCCCCC" Grid.ColumnSpan="10" RenderTransformOrigin="0.5,0.5" Margin="-10,7,10,97">
          <Rectangle.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform/>
              <RotateTransform Angle="-0.416"/>
              <TranslateTransform/>
            </TransformGroup>
          </Rectangle.RenderTransform>
        </Rectangle>

        <!-- Setting Title Label -->

        <Label Content="Setting Title " HorizontalAlignment="Left" Margin="0,16,0,0" VerticalAlignment="Top" Width="98" Height="34" FontSize="16" Grid.ColumnSpan="4" />

        <!-- ComboBox for Setting Title -->
        <ComboBox Background="White" Margin="43,23,34,0" VerticalAlignment="Top" Height="22"  Grid.Column="4" Grid.ColumnSpan="6" />

        <!-- Connection String Label -->
        <Label Content="Connection String" HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Height="34" FontSize="16" Grid.ColumnSpan="5" Margin="0,50,0,0" />

        <!-- Connection String TextBox -->
        <TextBox HorizontalAlignment="Left" Margin="43,59,0,0" VerticalAlignment="Top" Width="562" Height="100" 
                         AcceptsReturn="True" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" Grid.RowSpan="3" Grid.Column="4" Grid.ColumnSpan="6" />

        <!-- Baskets Label -->
        <Label Content="Baskets" HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top" Width="72" Height="30" FontSize="16" Grid.Row="2" Grid.ColumnSpan="2" RenderTransformOrigin="0.542,0.796" />

        <!-- Baskets TextBox -->
        <TextBox HorizontalAlignment="Left" Margin="43,52,0,0" VerticalAlignment="Top" Width="265" Height="59" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible"  RenderTransformOrigin="0.5,0.5" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="5" >
          <TextBox.RenderTransform>
            <TransformGroup>
              <ScaleTransform/>
              <SkewTransform AngleX="0.533"/>
              <RotateTransform/>
              <TranslateTransform X="0.465"/>
            </TransformGroup>
          </TextBox.RenderTransform>
        </TextBox>

        <!-- Delete Baskets Button -->
        <Button Content="Delete Baskets" HorizontalAlignment="Left" Margin="114,55,0,0" VerticalAlignment="Top" Width="100" Height="24" FontSize="11" Background="#FFE8E8E8" Grid.Row="2" Grid.Column="8" RenderTransformOrigin="0.443,1.552"/>

        <!-- Checkbox next to Delete Baskets -->
        <CheckBox HorizontalAlignment="Left" Margin="114,0,0,0" VerticalAlignment="Center" Width="15" Height="15" Grid.Row="2" Grid.Column="8"  />

        <!-- Save Button -->
        <Button HorizontalAlignment="Left" Margin="235,51,0,0" VerticalAlignment="Top" Width="160" Height="50" Background="#A0C13D" Foreground="White" FontWeight="SemiBold" FontSize="20" Cursor="Hand" BorderThickness="0" RenderTransformOrigin="-0.036,0.381" Grid.Row="2" Grid.Column="8" Grid.ColumnSpan="2" >
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="⤵" FontSize="22" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBlock Text="Save" VerticalAlignment="Center"/>
          </StackPanel>
        </Button>
      </Grid>
    </Grid>
  </Border>
</Window>